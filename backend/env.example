# NearbyNomad Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=8080
FRONTEND_URL=http://localhost:3000

# API Keys (Get these from respective services)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
OPENSTREETMAP_API_URL=https://overpass-api.de/api/interpreter
NOMINATIM_API_URL=https://nominatim.openstreetmap.org

# Database (Optional - for storing user preferences)
DATABASE_URL=your_database_url_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Uber Integration
UBER_CLIENT_ID=your_uber_client_id_here
UBER_CLIENT_SECRET=your_uber_client_secret_here

# Logging
LOG_LEVEL=info
